FROM python:3.12-slim

ENV PYTHONUNBUFFERED=1
ENV DJANGO_SETTINGS_MODULE=config.settings

WORKDIR /usr/src/app

RUN apt-get update && apt-get install -y --no-install-recommends \
    # Libraries required by OpenCV (cv2) for image/video functionality
    libgl1 \
    libglib2.0-0 \
    libsm6 \
    libxrender1 \
    libxext6 \
    # Required for video processing (MoviePy/some OpenCV features)
    ffmpeg \
    \
    # ------------------------------------------------------------------
    # FIX: Install system libraries for PostgreSQL connection (libpq-dev)
    # This ensures psycopg2 can load its dependencies.
    # ------------------------------------------------------------------
    libpq-dev \
    build-essential \
    \
    # Cleanup to keep image size small
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
# The pip install step will now find the required system libraries
RUN pip install --upgrade pip && pip install -r requirements.txt 

COPY . .

EXPOSE 8000

CMD ["python3", "manage.py", "runserver", "0.0.0.0:8000"]